{% extends 'MesalabAdminBundle::layout.html.twig' %}

{% form_theme form 'MesalabAdminBundle::form.html.twig' %}

{% block side %}
	<h3>Actions</h3>
	<a id="formSubmit" class="btn btn-primary btn-lg btn-block" href="#">Create</a>
	<a class="btn btn-default btn-lg btn-block" href="{{ path(bundleParams.routingPrefix) }}?{{ queryString }}">Annulla</a>
{% endblock %}

{% block table %}
    {{ form(form, {'attr': {'id': 'newForm', 'novalidate': 'novalidate'}}) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
	<script>
		$(function(){
			$('#container').on('click','#formSubmit', function(e){
				e.preventDefault();
				$('#newForm').submit();
			})
		});

	</script>
{% endblock %}